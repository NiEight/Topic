<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/VeryPeri_Dark">


    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back"
        android:clickable="true"/>

    <TextView
        android:id="@+id/accountLinkingTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="계정 연동"
        android:fontFamily="@font/tt_together"
        android:textSize="30dp"
        android:textColor="@color/VeryPeri_Light"
        android:gravity="center"/>

    <TextView
        android:id="@+id/sign"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accountLinkingTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="소셜 계정"
        android:textColor="@color/VeryPeri_Light"
        android:textSize="15dp"
        android:fontFamily="@font/ef_diary"/>

    <ImageButton
        android:id="@+id/account_kakao_btn"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:src="@drawable/account_kakao_no_connection"
        app:layout_constraintTop_toBottomOf="@id/sign"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/account_google_btn"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:src="@drawable/account_google_no_connection"
        app:layout_constraintTop_toBottomOf="@id/account_kakao_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>