<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/VeryPeri_Dark">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/optionTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/backBtn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="설정"
        android:fontFamily="@font/tt_together"
        android:textSize="30dp"
        android:textColor="@color/VeryPeri_Light"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Personal_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="개인정보"
        android:textColor="@color/white"
        android:fontFamily="@font/ef_diary"/>

    <ImageView
        android:id="@+id/personal_info_background"
        android:layout_width="340dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/Personal_info_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:src="@drawable/option_box_340x150"/>
    
    <TextView
        android:id="@+id/pwChangedBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/Personal_info_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:text="비밀번호 변경"
        android:textSize="20dp"
        android:fontFamily="@font/ef_diary"
        android:textColor="@color/VeryPeri_Light"
        android:gravity="center|left"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/pwChangedBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="로그아웃"
        android:textSize="20dp"
        android:fontFamily="@font/ef_diary"
        android:textColor="@color/VeryPeri_Light"
        android:gravity="center|left"/>

    <TextView
        android:id="@+id/deleteMyAccount"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/logout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="토픽 탈퇴"
        android:textSize="20dp"
        android:fontFamily="@font/ef_diary"
        android:textColor="@color/VeryPeri_Light"
        android:gravity="center|left"/>

    <TextView
        android:id="@+id/general_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/personal_info_background"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:text="일반"
        android:textColor="@color/white"
        android:fontFamily="@font/ef_diary"/>

    <ImageView
        android:id="@+id/etc_background"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:src="@drawable/option_box_340x100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/general_title"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/apkInfo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:fontFamily="@font/ef_diary"
        android:gravity="center|left"
        android:text="앱 정보"
        android:textColor="@color/VeryPeri_Light"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/general_title"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/support"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/apkInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="문의"
        android:textSize="20dp"
        android:fontFamily="@font/ef_diary"
        android:textColor="@color/VeryPeri_Light"
        android:gravity="center|left"
        android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>